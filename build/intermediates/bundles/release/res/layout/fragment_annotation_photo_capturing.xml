<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/fragment_photo_capturing"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/add_overflow_buttons_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/spacing_normal">

        <ImageView
            android:id="@+id/delete_button"
            android:layout_width="@dimen/button_height_normal"
            android:layout_height="@dimen/button_height_normal"
            android:src="@drawable/delete_button_icon"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/add_button"
            android:layout_width="@dimen/button_height_normal"
            android:layout_height="@dimen/button_height_normal"
            android:src="@drawable/add_button_icon"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/visibility_button"
        android:layout_width="@dimen/button_height_normal"
        android:layout_height="@dimen/button_height_normal"
        android:layout_margin="@dimen/spacing_normal"
        android:layout_toStartOf="@id/add_overflow_buttons_container"
        android:src="@drawable/visibility_off_button_icon"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/annotation_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>